## Variables de entorno para desarrollo local
# Copia este archivo como .env y configura tus valores

# Base de datos principal (usuarios, autenticación)
DATABASE_URL="mysql://usuario:password@localhost:3306/rpjia"

# Configuración de ChromaDB (base vectorial)
CHROMA_HOST="127.0.0.1"
CHROMA_PORT="8000"
CHROMA_URL=""
CHROMA_COLLECTION="rpjia-actividades"
CHROMA_SSL="false"

# Configuración de autenticación
NEXTAUTH_SECRET="tu-clave-secreta-muy-segura-aqui"
NEXTAUTH_URL="http://localhost:3000"
JWT_SECRET="cambia-esta-clave-jwt"
JWT_EXPIRES_IN="12h"
AUTH_SALT_ROUNDS="12"
SEED_DEFAULT_PASSWORD="ChangeMe123!"
SEED_ADMIN_PASSWORD=""
SEED_DOCUMENTADOR_PASSWORD=""
SEED_USUARIO_PASSWORD=""
SEED_SUPERADMIN_EMAIL=""
SEED_SUPERADMIN_PASSWORD=""
SEED_SUPERADMIN_NAME=""
SEED_SUPERADMIN_LASTNAME=""
SEED_SUPERADMIN_USERNAME=""
SEED_SUPERADMIN_AVATAR=""
SEED_SUPERADMIN_PHONE=""
SEED_SUPERADMIN_BIRTHDATE=""

# API de IA (OpenAI o similar)
OPENAI_API_KEY="tu-api-key-de-openai"

# Configuración del servidor
PORT=3001
NODE_ENV="development"

# Configuración de email (opcional)
EMAIL_SERVER="smtp://usuario:password@smtp.example.com:587"
EMAIL_FROM="noreply@asistente-ia-juvenil.com"

# Configuración de uploads
MAX_FILE_SIZE="10mb"
UPLOAD_PATH="./uploads"

# URL del frontend para CORS
FRONTEND_URL="http://localhost:3000"